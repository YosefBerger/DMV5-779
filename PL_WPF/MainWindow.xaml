<Window x:Class="PL_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL_WPF"
        mc:Ignorable="d"
        Title="DMV" Icon="/Limud.ico"  Height="800" Width="800">
    <Window.Background>
        <SolidColorBrush Color="White"/>
    </Window.Background>
    
    <Border Margin="15">
        <Border.Background>
            <ImageBrush ImageSource="MisradHaRishu_4x_Light.png" Stretch="Uniform"/>
        </Border.Background>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="TestersButton" Content="Testers" Click="TestersButton_Click" Grid.Column="0" Margin="10" />
            <Button x:Name="TraineesButton" Content="Trainees" Click="TraineesButton_Click" Grid.Column="1" Margin="10" />
            <Button x:Name="TestsButton" Content="Tests" Click="TestsButton_Click" Grid.Column="2" Margin="10" />
        </Grid>
    </Border>
</Window>
