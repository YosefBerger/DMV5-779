<Page x:Class="PL_WPF.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="HomePagePage">

    <Border Padding="35">
        <Grid Margin="14">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" HorizontalAlignment="Center" Text="Select a new page to continue" FontWeight="Bold" FontSize="26pt" />
            <Image Source="/Pics/HighwayFlage.jpg" Grid.Row="1" Height="auto" HorizontalAlignment="Center" Stretch="Uniform" VerticalAlignment="Center"/>
        </Grid>


    </Border>
</Page>
